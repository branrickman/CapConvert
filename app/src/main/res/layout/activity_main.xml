<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/pfTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pF"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/pfET"
        app:layout_constraintEnd_toStartOf="@+id/pfET"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pfET" />

    <TextView
        android:id="@+id/ufTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Î¼F"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/ufET"
        app:layout_constraintEnd_toStartOf="@+id/ufET"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ufET" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nfET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ufET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nfTV"
        app:layout_constraintTop_toBottomOf="@+id/pfET" />

    <TextView
        android:id="@+id/nfTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nF"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/nfET"
        app:layout_constraintEnd_toStartOf="@+id/nfET"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nfET" />

    <EditText
        android:id="@+id/pfET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/nfET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pfTV"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/ufET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/mfET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ufTV"
        app:layout_constraintTop_toBottomOf="@+id/nfET" />

    <EditText
        android:id="@+id/mfET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mfTV"
        app:layout_constraintTop_toBottomOf="@+id/ufET" />

    <TextView
        android:id="@+id/mfTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mF"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/mfET"
        app:layout_constraintEnd_toStartOf="@+id/mfET"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mfET"
        app:layout_constraintVertical_bias="0.692" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".7" />
</androidx.constraintlayout.widget.ConstraintLayout>